<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="style.css" rel="stylesheet" />
    <title>Result</title>
</head>
<body>
    <br>
    <br>
    <div class="warehouse">
          
        <% for (var i = 1; i <= 10; i++) { %>
            <div class="row">
            <% for (var j = 0; j < 31; j++) { %>
                <% if (j%3!=0) { %>
                    <div id="(<%= i %>,<%= j %>)"class="product rounded border border-danger">(<%= i %>,<%= j %>)</div>
                  <% } else { %>
                    <div class="aisle rounded"></div>
                  <% } %>
            <% } %>
            </div>
        <% } %>
    </div>

    <br>

    <div>
        <div id="ok" class="col-md-12 text-center">
            <% if(result[result.length-1]['alg'] == "GA") { %>
                <div>Genetic algorithm</div>
            <% } %> 
        
            <% if(result[result.length-1]['alg'] == "ILS") { %>
                <div>Iterated Local Search</div>
            <% } %>
        
            <% if(result[result.length-1]['alg'] == "priorityRuleBased") { %>
                
                <div>Priority-Rule Based </div>
                    
            <% } %>
        
            <% if(result[result.length-1]['alg'] == "seedBased") { %>
                <div>Seed-Based</div>
            <% } %>
        </div>
    
        <% result.pop() %> 

        <table id="result_t" class="table table-hover table-bordered">
            <tr>
                <th class="bg-warning">Batch</th>
                <th class="bg-warning">Orders</th>
                <th class="bg-warning">Total Capacity</th>
            </tr>
            <% result.forEach((batch) => { %>
                <tr>
                    <td style="width: 3%;"><%= batch.nr %></td>
                    <td style="width: 94%;"><%= batch.orders %></td>
                    <td style="width: 3%;"><%= batch.capacity %></td>
                </tr>
            <% }) %>
        </table>
        <br>
    </div>
    <div class="col-md-12 text-center">
        <a href="/" class="btn btn-warning" role="button"><span style="text-align:center"></span>Test another algorithm</a>
    </div>

    <script src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>